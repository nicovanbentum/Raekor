{
	"name": "raekor",
	"version-string": "0.1",
    "dependencies": [
        {
            "name": "lz4",
            "platform": "windows & static"
        },
        {
            "name": "glad",
            "features": [ "extensions" ],
            "platform": "windows & static"
        },
        {
            "name": "assimp",
            "platform": "windows & static"
        },
        {
            "name": "sdl2",
            "features": [ "vulkan" ],
            "platform": "windows & static"
        },
        {
            "name": "imgui",
            "features": [
                            "sdl2-binding", 
                            "dx11-binding",
                            "dx12-binding",
                            "opengl3-binding", 
                            "docking-experimental"
                        ],
            "platform": "windows & static"
        },
        {
            "name": "directx-headers",
            "platform": "windows & static"
        }
    ]
}
